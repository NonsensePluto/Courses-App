<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/card_vertical_margin"
    android:backgroundTint="@color/dark_gray"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_dimen">

        <ImageView
            android:id="@+id/ivCourseImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_image_height"
            android:background="@drawable/bg_rounded_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_dimen"
            android:background="@drawable/bg_glass"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/ivCourseImage"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_dimen"
                android:src="@drawable/ic_star_fill" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_dimen"
                android:layout_marginEnd="@dimen/rating_text_margin_end"
                android:text="4.9"
                android:textColor="@android:color/white"
                android:textSize="@dimen/rating_text_size"
                android:textStyle="bold"

                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_dimen"
            android:layout_marginBottom="@dimen/medium_dimen"
            android:background="@drawable/bg_glass"
            android:paddingHorizontal="@dimen/date_padding_horizontal"
            android:paddingVertical="@dimen/date_padding_vertical"
            android:text="22 Мая 2024"
            android:textColor="@android:color/white"
            android:textSize="@dimen/date_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivCourseImage"
            app:layout_constraintStart_toEndOf="@id/tvRating"
            tools:ignore="HardcodedText" />


        <ImageButton
            android:id="@+id/ibFavorite"
            android:layout_width="@dimen/favorite_button_size"
            android:layout_height="@dimen/favorite_button_size"
            android:layout_marginTop="@dimen/medium_dimen"
            android:layout_marginEnd="@dimen/medium_dimen"
            android:background="@drawable/bg_glass"
            android:scaleType="center"
            android:src="@drawable/ic_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/medium_dimen"
            android:layout_marginTop="@dimen/medium_dimen"
            android:text="Java-разработчик с нуля"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCourseImage"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/medium_dimen"
            android:layout_marginTop="@dimen/description_margin_top"
            android:ellipsize="end"
            android:lineSpacingMultiplier="@dimen/description_line_spacing"
            android:maxLines="2"
            android:text="Освойте backend-разработку\nи программирование на Java, фреймворки..."
            android:textColor="@color/subtitle_text"
            android:textSize="@dimen/description_text_size"
            app:layout_constraintBottom_toTopOf="@+id/llBottomContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/llBottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/medium_dimen"
            android:layout_marginTop="@dimen/medium_dimen"
            android:layout_marginBottom="@dimen/medium_dimen"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription">


            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textColor="@color/white"
                android:textSize="@dimen/price_text_size"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_ruble"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/button_padding_horizontal"
                android:paddingVertical="@dimen/button_padding_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Подробнее"
                    android:textColor="@color/green"
                    android:textSize="@dimen/button_text_size"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="@dimen/button_icon_size"
                    android:layout_height="@dimen/button_icon_size"
                    android:layout_marginStart="@dimen/button_icon_margin"
                    android:src="@drawable/ic_outline_arrow" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>